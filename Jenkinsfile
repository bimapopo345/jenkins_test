pipeline {
    agent any

    stages {
        stage('Initialize') {
            steps {
                echo 'Starting...'
            }
        }
        stage('Build') {
            steps {
                echo 'Building the project...'
                // Simulasikan command build, ganti dengan command build yang sebenarnya
                sh 'echo "Building..."'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing the project...'
                // Simulasikan command test, ganti dengan command test yang sebenarnya
                sh 'echo "Testing..."'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying the project...'
                // Simulasikan command deploy, ganti dengan command deploy yang sebenarnya
                sh 'echo "Deploying..."'
            }
        }
    }
}
